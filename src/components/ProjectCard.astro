---
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  href: string;
  summary?: string;
  gallery?: ImageMetadata[]; // ðŸ‘ˆ URLs like "/uploads/one.jpg"
}
const { title, href, summary, gallery = [] } = Astro.props;
const cover = gallery[0]; // first image as the cover
---
<article class="card">
  <a href={href}>
    {cover && <img src={cover.src} alt={title} loading="lazy" />}
    <h2>{title}</h2>
    {summary && <p>{summary}</p>}
  </a>
</article>

<style>
  .card { padding: 1rem; border: 1px solid #eee; border-radius: .75rem; }
  img { width: 100%; height: auto; border-radius: .5rem; display:block; }
</style>