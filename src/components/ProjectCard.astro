---
import type { ImageMetadata } from 'astro';
type Img = string | ImageMetadata;

export interface Props {
  title: string;
  href: string;
  summary?: string;
  gallery?: string[];   // ‚Üê URLs like "/uploads/one.jpg"
}
const { title, href, summary, gallery = [] } = Astro.props;
const cover = gallery[0]; // first image URL
---

<article class="card">
  <a href={href}>
    {cover && <img src={cover} alt={title} loading="lazy" decoding="async" />}
    <h2>{title}</h2>
    {summary && <p>{summary}</p>}
  </a>
</article>

